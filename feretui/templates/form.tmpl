<templates>
  <template id="feretui-input-label">
    <label for="{{ label.field_id }}" class="label">
      {{ label.text }}
      {% if required %}
      <span class="content is-small">
      (
        <span class="has-text-link">
          required
        </span>
      )
      </span>
      {% endif %}
      <include template="feretui-tooltip" />
    </label>
  </template>
  <template id="feretui-input-error">
    <p class="help is-danger">
      {{ errors | join(', ')  }}
    </p>
  </template>
  <template id="feretui-input-field">
    <div class="field">
      {% if label %}
      <include template="feretui-input-label"/>
      {% endif %}
      <div class="control">
        {{ widget }}
      </div>
      {% if not readonly and errors %}
      <include template="feretui-input-error"/>
      {% endif %}
    </div>
  </template>
  <template id="feretui-bool-field">
    <div class="field">
      {% if label %}
      <label for="{{ label.field_id }}" class="checkbox">
        {{ widget }}
        {{ label.text }}
        <include template="feretui-tooltip" />
      </label>
      {% else %}
      {{ widget }}
      {% endif %}
      {% if not readonly and errors %}
      <include template="feretui-input-error"/>
      {% endif %}
    </div>
  </template>
  <template id="feretui-radio-field-vertical">
    <div class="field">
      <include template="feretui-input-label"/>
      <div class="control">
        <ul>
          {% for subfield in field %}
          <li>
            <label class="radio" for="{{ subfield.id }}" >
                {{ subfield(**options) }}
                {{ subfield.label(class_="radio") }}
                {% set tooltip = subfield.description %}
                <include template="feretui-tooltip" />
            </label>
          </li>
          {% endfor %}
        </ul>
      </div>
      {% if not readonly and errors %}
      <include template="feretui-input-error"/>
      {% endif %}
    </div>
  </template>
  <template id="feretui-radio-field-horizontal">
    <div class="field">
      <include template="feretui-input-label"/>
      <div class="control">
        {% for subfield in field %}
          <label class="radio" for="{{ subfield.id }}" >
            {{ subfield(**options) }}
            {{ subfield.label(class_="radio") }}
            {% set tooltip = subfield.description %}
            <include template="feretui-tooltip" />
          </label>
        {% endfor %}
      </div>
      {% if not readonly and errors %}
      <include template="feretui-input-error"/>
      {% endif %}
    </div>
  </template>
</templates>
